#!/usr/bin/env python

import sys

import vanilla


def main(argv):
    h = vanilla.Hub()
    b = h.bean(host='0.0.0.0', port=80)
    b.static('/', 'index.html')
    h.stop_on_term()



if __name__ == '__main__':
    argv = None
    # argv = docopt(__doc__, version=__version__)
    sys.exit(main(argv))
